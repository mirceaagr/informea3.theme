{# Modal dialog for the treaty text viewer #}
<div id="treaty-text-modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="Read treaty text" aria-hidden="true">
    <div class="modal-header">
        {% set modal = TRUE %}
        {% include 'treaty-header.twig' %}
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="icon-remove"></i></button>
        <div class="treaty-text-toolbar well hidden-phone clearfix">
            <div class="pull-left">
                <strong>Treaty Text</strong>
            </div>
            <div class="pull-right">
                <a href="{{ i3_url('treaty', treaty, '/text?act=print') }}" target="_blank" class="btn btn-inline"><i class="icon-print"></i> Print</a>
                {# <button class="btn btn-inline"><i class="icon-link"></i> Cite/Link</button> #}
                <a href="{{ i3_url('treaty', treaty, '/text') }}" target="_blank" class="btn btn-inline"><i class="icon-resize-full"></i> Separate window</a>
            </div>
        </div>
    </div>
    <div class="modal-body">
        <p>Loading treaty text, please wait ...</p>
    </div>
</div>
